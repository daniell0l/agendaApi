<%- include('../includes/head') %>
<%- include('../includes/nav') %>
<link rel="stylesheet" href="./styles.css">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8" style="padding-top: 30px;">
      <h1 class="text-center">Login</h1>
      <p class="text-center">Acesse com seus dados de usuário</p>
      <div class="d-flex justify-content-center">
        <form action="/login/logiin" method="post" style="width: 300px;">
          <div class="row">
            <div class="col-lg">
              <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control">
              </div>
              <div class="mb-3">
                <label>Senha</label>
                <input type="password" class="form-control">
                <div class="form-text">Não possui uma conta? <a href="/criar-conta">Cadastre-se</a></div>
              </div>
              <div class="mb-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary" style="width: 50%;">Acessar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
